  "scripts": {
    <% if (serverlessInfrastructure) { %>
    "serverless": "serverless",
    "serverless:deploy": "npm run build && serverless deploy && npm run build:destroy",
    <% } %>
    "postinstall": "if [ $NPM_CONFIG_PRODUCTION ]; then npm run build; fi",
    "dev": "nodemon src/server/server.js --exec babel-node",
    "test": "NODE_ENV=development ENV=test jest --config jest.config.json -u",
    "build": "npm run build:clean && npm run build:client && npm run build:server",
    "build:destroy": "rm -rf dist",
    "build:clean": "npm run build:destroy && mkdir dist",
    "build:client": "webpack && mv dist/assets/index.html dist && cp -R public/ dist/",
    "build:server": "babel --ignore src/client -d ./dist ./src -s"
  },
